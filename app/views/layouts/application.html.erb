<!DOCTYPE html>
<html>
  <head>
    <title>Jobber</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		<link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.4/css/boxicons.min.css' rel='stylesheet'>
		<link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>


		<nav class="navbar navbar-expand-lg navbar-dark">
		  <a class="navbar-brand" href="/"><%= image_tag 'company-logo.png' %></a>
		  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		    <span class="navbar-toggler-icon"></span>
		  </button>

		  <div class="collapse navbar-collapse" id="navbarSupportedContent">
		    <ul class="navbar-nav mr-auto">
		    </ul>
				<% if company_signed_in? && user_signed_in? == false %>
					<a class="navbar-brand mt-3" href="/">Search <i class='bx bx-search bx-sm' ></i></a>
					<a class="navbar-brand mt-3" href="/companies/<%= current_company.id %>">Profile <i class='bx bxs-user bx-sm'></i></a>
					<a class="navbar-brand mt-3" href="/">Message <i class='bx bx-message-dots bx-sm' ></i></a>
				<% end %>
				<% if company_signed_in? == false && user_signed_in? %>
					<a class="navbar-brand mt-3" href="/">Search <i class='bx bx-search bx-sm' ></i></a>
					<a class="navbar-brand mt-3" href="/users/<%= current_user.id %>">Profile <i class='bx bxs-user bx-sm'></i></a>
					<a class="navbar-brand mt-3" href="/">Message <i class='bx bx-message-dots bx-sm' ></i></a>
				<% end %>
	    	<% if company_signed_in? == false && user_signed_in? == false %>
					<%= button_to 'Log In Company', new_company_session_url, {:class => "btn btn-nav mr-4 mb-2 p-x-2 mt-3"} %>

					<%= button_to 'Log In User', new_user_session_url, {:class => "btn btn-nav mb-2 p-x-2 mt-3"} %>
				<% end %>

				<% if company_signed_in? && user_signed_in? == false %>
					<%= button_to 'Log Out', destroy_company_session_url, {method: :delete, :class => "btn btn-nav mr-4 mb-2 p-x-2 mt-3"}%>
				<% end %>

	    	<% if company_signed_in? == false && user_signed_in? %>
					<%= button_to 'Log Out', destroy_user_session_url, {method: :delete, :class => "btn btn-nav mb-2 p-x-2 mt-3"}%>
				<% end %>
		  </div>
		</nav>

    <%= yield %>





		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>