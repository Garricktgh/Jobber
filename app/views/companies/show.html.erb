<div class="container">

	<% header = @company.name %>

	<% if header === nil %>
		<% header = @company.email%>
	<% end %>


	<h1 class="display-4 text-center"><%= header %></h1>

	<div class="row justify-content-center mt-5">
		<figure class="figure">
		  <img style="width: 30rem;" class="figure-img img-fluid rounded" alt="company logo" src=<%= @company.display_picture %> />
		</figure>
	</div>

	<div class="text-center mb-5">
		<%= link_to 'Back', company_path, {:class => "btn btn-outline-secondary"} %>

		<%= link_to 'Edit', edit_company_path(@company), {:class => "btn btn-outline-primary"} %>
	</div>



</div>