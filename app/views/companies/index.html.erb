<div class="container">


	<% header = @user.name %>

	<% if header === nil %>
		<% header = @user.email %>
	<% end %>


	<div class="container tinder bg-secondary mt-5 mb-5" style="width: 80%">
		<div class="row" style="width: 80%; margin: 0 auto">
			<div class="mt-5 tinder-content" style="width: 30%; margin: 0 auto;">
		  	<img src="http://www.baytekent.com/wp-content/uploads/2016/12/facebook-default-no-profile-pic1.jpg" class="card-img-top">
		  </div>
		  <div class="mt-5 tinder-content" style="width: 60%; margin: 0 auto;">
		    <h2 class="text-center"><%= header %></h2>
		    <div class="d-flex justify-content-around mt-4">
					<button type="button" class="btn btn-success"><%= @user.employment_type %></button>
					<button type="button" class="btn btn-success"><%= @user.industry %></button>
		    </div>
		    <div class="d-flex justify-content-around mt-4">
		    	<button type="button" class="btn btn-success"><%= @user.work_experience %></button>
					<button type="button" class="btn btn-success"><%= @user.education_level %></button>
					<button type="button" class="btn btn-success"><%= @user.expected_salary %></button>
		    </div>
		  </div>
		</div>

		<p class="text-center mt-5" style="width: 90%; margin: 0 auto;" >
				<%= @user.description %>
		</p>

		<div class="row mt-4 pb-5">


			<form class="col">
			  <div class="form-group">
			    <input type="number" class="form-control" placeholder=<%= @user.id %>>
			  </div>
			  <div class="form-group">

			  </div>
			  <div class="row justify-content-center">
			  	<button type="submit" class="tinder-btn btn-danger"><i class='bx bx-x bx-lg align-text-bottom'></i></button>
			  </div>
			</form>



			<form class="col">
			  <div class="form-group">
			    <input type="number" class="form-control" placeholder=<%= @user.id %>>
			  </div>
			  <div class="form-group">

			  </div>
			  <div class="row justify-content-center">
			  	<button type="submit" class="tinder-btn btn-success"><i class='bx bx-check bx-lg align-text-bottom' ></i></i></button>
			  </div>
			</form>

		</div>
	</div>



</div>