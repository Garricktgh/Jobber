<div class="container">

	<% header = @company.name %>

	<% if header === nil %>
		<% header = @company.email%>
	<% end %>

		<div class="card show-page mt-4 mb-3" style="width: 50%; margin: 0 auto;">
		  <div class="card-body">
		     <h3 class="card-title ml-3 mb-5 mt-4 text-center"><%= header %></h3>
				 <ul class="list-group list-group-flush">
				    <li class="list-group-item"><strong>Job Title:</strong> <p class="mt-3"><%= @post.job_title %></p></li>
				    <li class="list-group-item"><strong>Employment Type:</strong> <p class="mt-3"><%= @post.employment_type %></p></li>
				    <li class="list-group-item"><strong>Industry:</strong> <p class="mt-3"><%= @post.industry %></p></li>
				    <li class="list-group-item"><strong>Years of Experience:</strong> <p class="mt-3"><%= @post.work_experience %></p></li>
				    <li class="list-group-item"><strong>Education Level:</strong> <p class="mt-3"><%= @post.education_level %></p></li>
				    <li class="list-group-item"><strong>Expected Salary:</strong> <p class="mt-3"><%= @post.expected_salary %></p></li>
				  </ul>
				 <p class="mt-5 ml-3"><strong>Job Description:</strong></p>
		     <p class=" mt-3 ml-3"><%= @post.job_description %></p>
		  </div>
		</div>

	<div class="text-center mb-5">
		<%= link_to 'Back', company_path(@company), {:class => "btn btn-outline-secondary"} %>

		<%= link_to 'Edit', edit_post_path(@post), {:class => "btn btn-outline-primary"} %>
	</div>



</div>