<div class="container mt-4 mb-5">

	<div class="row justify-content-center">
		<i class='bx bx-like bx-lg text-center'></i>
	</div>
	<h4 class="text-center">Matches</h4>

	<div class="card matched text-white" >
		<% if company_signed_in? %>

			  <% @matches.each do |x| %>
					<div class="match-content">
						<% post = Post.where(id: x.post_id).first %>
						<a href="/messages">
							<img class="match-content" src=<%= User.where(id: x.user).first.display_picture %>>
						</a>
						<p class="lead text-center match-job-title"><%= post.job_title %></p>
					</div>
			  <% end %>

		<% elsif user_signed_in? %>

			  <% @matches.each do |x| %>
					<div class="match-content">
						<% post = Post.where(id: x.post_id).first %>
						<% p post %>
						<a href="/messages">
							<img class="match-content" src=<%= Company.where(id: post.company_id).first.display_picture %>>
						</a>
						<p class="lead text-center match-job-title"><%= post.job_title %></p>
					</div>
			  <% end %>

		<% end %>
	</div>

	<div class="card match-message">
	  <div class="row no-gutters">
	    <div class="col-md-3 text-center">
				<img class="match-content" src="http://www.baytekent.com/wp-content/uploads/2016/12/facebook-default-no-profile-pic1.jpg">
	    </div>
	    <div class="col-md-8">
        <a href="/messages" class="stretched-link"><h4 class="mt-3">Job Position</h4></a>
        <p class="lead">Company Name</p>
        <p>This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
	    </div>
	    <div class="col-md-1">
        <p><small>29/11/2019</small></p>
	    </div>
	  </div>
	</div>


	<div class="card match-message">
	  <div class="row no-gutters">
	    <div class="col-md-3 text-center">
				<img class="match-content" src="http://www.baytekent.com/wp-content/uploads/2016/12/facebook-default-no-profile-pic1.jpg">
	    </div>
	    <div class="col-md-8">
        <a href="/messages" class="stretched-link"><h4 class="mt-3">Job Position 2</h4></a>
        <p class="lead">Company Name</p>
        <p>This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
	    </div>
	    <div class="col-md-1">
        <p><small>29/11/2019</small></p>
	    </div>
	  </div>
	</div>









</div>