<div class="container msg-box">
<!--Message header-->
	<div class="row msg-header">
		<div class="col-2 msg-logo-details">
			<% if company_signed_in? %>
				<img class="msg-logo" src=<%= @user.display_picture %>>

			<% elsif user_signed_in? %>
				<img class="msg-logo" src=<%= Company.where(id: @post.company_id).first.display_picture %>>
			<% end %>
		</div>

		<div class="col-7 msg-recipient-details">
			<ul>
				<% if company_signed_in? %>
						<!-- Button trigger modal -->
						<li><a data-toggle="modal" href="#qwerty<%= @message.user_id %>"><%= @message.user.name %></a></li>

						<!-- Modal -->
						<div class="modal fade" id="qwerty<%= @message.user_id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
						  <div class="modal-dialog modal-dialog-centered" role="document">
						    <div class="modal-content">
						      <div class="modal-header">
						        <h5 class="modal-title text-dark" id="exampleModalLongTitle"><%= @message.user.name %></h5>
						        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
						          <span aria-hidden="true">&times;</span>
						        </button>
						      </div>
						      <div class="modal-body text-dark">
						      	<p><strong>Employment Type: </strong><%= @message.user.employment_type %></p>
						      	<p><strong>Industry: </strong><%= @message.user.industry %></p>
						      	<p><strong>Work Experience: </strong><%= @message.user.work_experience %></p>
						      	<p><strong>Education Level: </strong><%= @message.user.education_level %></p>
						      	<p><strong>Expected Salary: </strong><%= @message.user.expected_salary %></p>
						      	<p><strong>Self Description: </strong></p>
						      	<p><%= @message.user.description %></p>
						      </div>
						    </div>
						  </div>
						</div>
				<% elsif user_signed_in? %>
					<!-- Button trigger modal -->
						<li><a data-toggle="modal" href="#qwerty<%= @post.id %>"><%= @message.post.job_title %></a></li>
							<!-- Modal -->
						<div class="modal fade" id="qwerty<%= @post.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
						  <div class="modal-dialog modal-dialog-centered" role="document">
						    <div class="modal-content">
						      <div class="modal-header">
						        <h5 class="modal-title text-dark" id="exampleModalLongTitle"><%= @message.post.job_title %></h5>
						        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
						          <span aria-hidden="true">&times;</span>
						        </button>
						      </div>
						      <div class="modal-body text-dark">
						      	<p><strong>Employment Type: </strong><%= @message.post.employment_type %></p>
						      	<p><strong>Industry: </strong><%= @message.post.industry %></p>
						      	<p><strong>Work Experience: </strong><%= @message.post.work_experience %></p>
						      	<p><strong>Education Level: </strong><%= @message.post.education_level %></p>
						      	<p><strong>Expected Salary: </strong><%= @message.post.expected_salary %></p>
						      	<p><strong>Job Description: </strong></p>
						      	<p><%= @message.post.job_description %></p>
						      </div>
						    </div>
						  </div>
						</div>

				<% end %>

				<% if company_signed_in? %>
					<li><%= @message.post.job_title %></li>


				<% elsif user_signed_in? %>
					<li><%= Company.where(id: @post.company_id).first.name %></li>

				<% end %>

			</ul>
		</div>
		<div class="col-3 msg-matched-date">
			<ul>
				<li>Matched On</li>
				<li>Date-of-match</li>
			</ul>
		</div>
	</div>
	<!---Message portion--->
