<div class="container">
	<h1 class="text-center m-5">Forgot your password?</h1>

	<div class="form-group mt-5" style="width: 50%; margin: 0 auto">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= render "devise/shared/error_messages", resource: resource %>

		  <div class="field">
		    <%= f.label :email %><br />
		    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :required => "true" %>
		  </div>
		  <br>
		  <div class="actions">
		    <%= f.submit "Send me reset password instructions", class: "btn btn-submit" %>
		  </div>
		<% end %>
		<br>
		<%= render "devise/shared/links" %>
	</div>
</div>