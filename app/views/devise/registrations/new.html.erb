<div class="container">

	<h1 class="text-center m-5"><%= resource_name.capitalize %> Sign up</h1>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<div class="form-group mt-5" style="width: 50%; margin: 0 auto">

	  <%= render "devise/shared/error_messages", resource: resource %>

		  <div class="field">
		    <%= f.label :email %><br />
		    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :required => "true" %>
		  </div>
		  <br>
		  <div class="field">
		    <%= f.label :password %>
		    <% if @minimum_password_length %>
		    <em>(<%= @minimum_password_length %> characters minimum)</em>
		    <% end %><br />
		    <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", :required => "true" %>
		  </div>
		  <br>
		  <div class="field">
		    <%= f.label :password_confirmation %><br />
		    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control", :required => "true" %>
		  </div>

		  <div class="actions mt-3 mb-5">
		    <%= f.submit "Sign up", class: "btn btn-submit" %>
		  </div>

		</div>
	<% end %>



</div>