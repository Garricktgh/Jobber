<div class="container">

	<h1 class="display-4 text-center">Edit Your Job Seeker Profile</h1>

	<%= form_with scope: :user, model: @user, local: true do |form| %>
		<div class="form-group mt-5" style="width: 50%; margin: 0 auto">

		  <p>
		    <%= form.label :name %>
		    <%= form.text_field :name, {:class => "form-control", :minlength => 3, :maxlength => 50, :required => "true"} %>
		    <small class="form-text text-muted">3 to 50 characters</small>
		  </p>

		  <p>
		    <%= form.label :profile_pic %><br>
		    <%= form.url_field :profile_pic, {:class => "form-control"} %>
		  </p>

		  <%= link_to 'Back', user_path, {:class => "btn btn-outline-secondary"} %>
		  <%= form.submit "Save", class: "btn btn-primary" %>

		</div>
	<% end %>

</div>