<div class="container">

	<% header = @user.name %>

	<% if header === nil %>
		<% header = @user.email%>
	<% end %>



		<div class="card mb-3">
		  <img class="card-img-top" style="width: 50%; margin: 0 auto;" alt="display picture" src=<%= @user.display_picture %> />
		  <div class="card-body">
		     <h3 class="card-title ml-3 mb-5 mt-4"><%= header %></h3>
				 <ul class="list-group list-group-flush">
				    <li class="list-group-item"><strong>Employment Type:</strong> <p class="mt-3"><%= @user.employment_type %></p></li>
				    <li class="list-group-item"><strong>Industry:</strong> <p class="mt-3"><%= @user.industry %></p></li>
				    <li class="list-group-item"><strong>Years of Experience:</strong> <p class="mt-3"><%= @user.work_experience %></p></li>
				    <li class="list-group-item"><strong>Education Level:</strong> <p class="mt-3"><%= @user.education_level %></p></li>
				    <li class="list-group-item"><strong>Expected Salary:</strong> <p class="mt-3"><%= @user.expected_salary %></p></li>
				  </ul>
				 <p class="mt-5 ml-3"><strong>Self Description:</strong></p>
		     <p class="card-text mt-3 ml-3"><%= @user.description %></p>
		  </div>
		</div>


	<div class="text-center mb-5">
		<%= link_to 'Back', user_path, {:class => "btn btn-outline-secondary"} %>

		<%= link_to 'Edit', edit_user_path(@user), {:class => "btn btn-outline-primary"} %>
	</div>



</div>